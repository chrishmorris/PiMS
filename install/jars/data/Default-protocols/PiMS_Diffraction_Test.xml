  <parameterDefinition id="8" name="gamma" parameterType="Float" isMandatory="false" label="Unit cell inclination angle gamma" />
  <parameterDefinition id="9" name="x" parameterType="Float" isMandatory="false" label="Rotation axis x" />
  <parameterDefinition id="10" name="y" parameterType="Float" isMandatory="false" label="Rotation axis y" />
