<xs:schema targetNamespace="http://www.pims-lims.org/services/ispyb"    xmlns:tns="http://www.pims-lims.org/services/ispyb" xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" attributeFormDefault="unqualified" version="$Id: Buffer.xsd,v 1.3 2006/11/02 08:34:59 lxl Exp $">
	<xs:complexType name="Buffer">
		<xs:annotation>
			<xs:documentation>Buffer used in the Crystallisation screen.</xs:documentation>
		</xs:annotation>
		<xs:sequence>
			<xs:element name="name" type="xs:string">
				<xs:annotation>
					<xs:documentation>Name of the Buffer e.g. 'tri-Sodium Citrate dihydrate'.</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="concentration" type="xs:double">
				<xs:annotation>
					<xs:documentation>Concentration of the Buffer in M.</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="pH" type="xs:double">
				<xs:annotation>
					<xs:documentation>pH of the Buffer.</xs:documentation>
				</xs:annotation>
			</xs:element>
		</xs:sequence>
	</xs:complexType>
</xs:schema>
